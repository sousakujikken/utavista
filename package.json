{
  "name": "utavista",
  "private": true,
  "version": "0.6.0",
  "main": "dist/main/main/main.js",
  "license": "GPL-3.0",
  "author": "HIRO@Sousakujikken",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build --mode development",
    "build:main": "tsc -p tsconfig.main.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "package": "npm run build && electron-builder",
    "package:all": "npm run build && electron-builder -mwl",
    "validate-parameters": "node scripts/validate-parameters.js",
    "pre-commit": "npm run validate-parameters && npm run lint",
    "template:analyze": "tsx scripts/analyze-templates.ts",
    "template:validate": "tsx scripts/validate-templates.ts",
    "template:migrate": "tsx scripts/migrate-templates.ts",
    "backup:create": "tsx scripts/backup-restore.ts create",
    "backup:restore": "tsx scripts/backup-restore.ts restore",
    "backup:list": "tsx scripts/backup-restore.ts list",
    "backup:cleanup": "tsx scripts/backup-restore.ts cleanup"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "howler": "^2.2.4",
    "pixi-filters": "^5.3.0",
    "pixi.js": "^7.3.3",
    "rc-slider": "^11.1.8",
    "re-resizable": "^6.11.2",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^6.21.3",
    "sharp": "^0.34.2",
    "wavesurfer.js": "^7.9.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/howler": "^2.2.12",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "puppeteer": "^24.14.0",
    "rollup": "^4.24.4",
    "tsx": "^4.19.4",
    "typescript": "~5.6.3",
    "typescript-eslint": "^7.0.1",
    "vite": "^5.4.11"
  }
}
